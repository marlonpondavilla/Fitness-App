<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fitnessapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_programs"
        android:name="com.example.fitnessapp.ui.programs.ProgramsFragment"
        android:label="Programs"
        tools:layout="@layout/fragment_programs" />

    <fragment
        android:id="@+id/navigation_trainers"
        android:name="com.example.fitnessapp.ui.trainers.TrainersFragment"
        android:label="Trainers"
        tools:layout="@layout/fragment_trainers" />

    <fragment
        android:id="@+id/navigation_video_classes"
        android:name="com.example.fitnessapp.ui.videoclasses.VideoClassesFragment"
        android:label="Video Classes"
        tools:layout="@layout/fragment_video_classes" />

    <fragment
        android:id="@+id/navigation_contact"
        android:name="com.example.fitnessapp.ui.contact.ContactFragment"
        android:label="Contact"
        tools:layout="@layout/fragment_contact" />
