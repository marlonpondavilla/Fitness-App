<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.videoclasses.VideoClassesFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/be_vietnam_pro_bold"
        android:gravity="center"
        android:text="Video Class Plans"
        android:textColor="#050505"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join our live online classes and train with our expert trainers from anywhere. Chhose a plan that fits your schedule and fitness goals."
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="90dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="160dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Plan"
                android:layout_gravity="center"
                android:textFontWeight="40"
                android:textColor="#050505"
                android:textSize="20dp"
                android:fontFamily="@font/be_vietnam_pro_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="2 classes per week"
                android:textColor="#050505"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="₱825/month"
                android:textColor="#050505"
                android:textSize="14dp" />

            <Button
                android:layout_height="40dp"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:text="Sign Up"
                android:layout_marginTop="10dp"
                android:background="@drawable/class_button"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="320dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard Plan"
                android:layout_gravity="center"
                android:textFontWeight="40"
                android:textColor="#050505"
                android:textSize="20dp"
                android:fontFamily="@font/be_vietnam_pro_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="4 classes per week"
                android:textColor="#050505"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="₱2,200/month"
                android:textColor="#050505"
                android:textSize="14dp" />

            <Button
                android:layout_height="40dp"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:text="Sign Up"
                android:layout_marginTop="10dp"
                android:background="@drawable/class_button"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="480dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium Plan"
                android:layout_gravity="center"
                android:textFontWeight="40"
                android:textColor="#050505"
                android:textSize="20dp"
                android:fontFamily="@font/be_vietnam_pro_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Unlimited classes"
                android:textColor="#050505"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="₱3,850/month"
                android:textColor="#050505"
                android:textSize="14dp" />

            <Button
                android:layout_height="40dp"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:text="Sign Up"
                android:layout_marginTop="10dp"
                android:background="@drawable/class_button"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>