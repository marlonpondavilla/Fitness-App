<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".ui.programs.ProgramsFragment">

    <!-- First CardView -->
<androidx.cardview.widget.CardView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:backgroundTint="#22252e"
android:layout_marginLeft="20dp"
android:layout_marginRight="20dp"
android:layout_marginTop="20dp"
app:cardCornerRadius="8dp"
app:cardElevation="4dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/offerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight Training"
        android:layout_gravity="center"
        android:textFontWeight="40"
        android:textColor="#f5f5f5"
        android:textSize="20sp"
    android:fontFamily="@font/be_vietnam_pro_bold"/>

    <TextView
        android:id="@+id/offerDescrription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build muscle and strength with expert-led weight training process"
        android:layout_gravity="center"
        android:gravity="center"
        android:textFontWeight="40"
        android:textColor="#f5f5f5"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
</androidx.cardview.widget.CardView>

